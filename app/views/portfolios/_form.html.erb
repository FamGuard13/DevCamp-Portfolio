<%= form_for(@portfolio_item) do |f| %>
  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :link %>
    <%= f.text_area :link %>
  </div>
  
  <div class="form-group">
    <label class="btn btn-primary">
      Upload a main image file <%= f.file_field :main_image %>
    </label>
  </div>
  
  <div class="form-group">
    <label class="btn btn-primary">
      Upload a thumb image file <%= f.file_field :thumb_image %>
    </label>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: 'form-control', rows: 13 %>
  </div>

  <div class="form-group">
    <label class="btn btn-primary">
      Upload a Body Image <%= f.file_field :body_img %>
    </label>
  </div>

  <h2>Technolgies Used:</h2>
    <div class="form-group">
      <%= f.label :tech_overview %>
      <%= f.text_area :tech_overview, class: 'form-control', rows: 13 %>
    </div>
  <div>
    <%= f.fields_for :technologies do |technology_form| %>
      <%= render 'technology_fields', f: technology_form %>
    <% end %>
    
    <div>
      <%= link_to_add_association 'Add Technology', f, :technologies %>
    </div>
  </div>

    <div>
      <%= f.fields_for :features do |feature| %>
        <%= render 'feature_fields', f: feature %>
      <% end %>
      
      <div>
        <%= link_to_add_association 'Add Feature', f, :features %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit 'Save Portfolio Item', class: 'btn btn-primary btn-block' %>
    </div>
<% end %>