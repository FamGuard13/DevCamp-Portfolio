<div class="show">
  <section 
  class='headline' 
  style="background-image: url('<%= img(@school.img) %>')"
  >
    <%= image_tag(img(@school.logo), class: 'grid-logo')%>

    <%= admin_links('school_path(@school)', 'admin-links') %>
  </section>

  <section class='description'>
    <%= image_tag(@school.description_img, class: 'paired-image') %>

    <div class='copy'>
      <%= markdown(@school.description) %>
    </div>
  </section>

  <div class="divider"></div>

  <section class='details'>
    <h1>School Details</h1>
    <div>
      <h3>Attended Location</h3>
      <%= @school.location %>
    </div>

    <div>
      <h3>Completion Status</h3>
      <%= @school.status %>
    </div>

    <div>
      <h3>Attended</h3>
      <p><%= @school.end_date.strftime("%b, %Y") %> - 
      <% if @school.end_date? %>
          <%= @school.end_date.strftime("%b, %Y") %>
        <% else %>
          <%= 'Current' %></p>
      <% end %>
    </div>
  </section>

  <div class="divider"></div>

  <section class="experience">
    <div class='copy'>
      <%= markdown(@school.experience) %>
    </div>

    <%= image_tag(@school.experience_img, class: 'paired-image') %>
  </section>

  <p><%= @school.link %></p>
</div>