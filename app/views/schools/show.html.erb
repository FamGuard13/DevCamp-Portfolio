<div class="show">
  <section 
  class='headline' 
  style="background-image: url('<%= img(@school.img) %>')"
  >
    <%= image_tag(img(@school.logo), class: 'school-logo')%>

    <%= admin_links('school_path(@school)', 'admin-links') %>
  </section>

  <section class='description'>
    <div class='paired-image'></div>

    <div class='copy'>
      <%= markdown(@school.description) %>
    </div>
  </section>

  <div class="divider"></div>

  <section class='details'>
    <h1>School Details</h1>
    <div>
      <h3>Attended Location</h3>
      <%= @school.location %>
    </div>

    <div>
      <h3>Completion Status</h3>
      <%= @school.status %>
    </div>

    <div>
      <h3>Attendance</h3>
      <p><b>Start-Date:</b> <%= @school.end_date.strftime("%b, %Y") %></p>
      <p><b>End-Date:</b> <%= @school.end_date.strftime("%b, %Y") %></p>
    </div>
  </section>

  <div class="divider"></div>

  <section class="experience">
    <div class='copy'>
      <%= markdown(@school.description) %>
    </div>

      <div class='paired-image'></div>
  </section>

  <p><%= @school.link %></p>
</div>