<h1 class="title">Education</h1>

<div class="grid-sort">
  <% @schools.each do |school| %>
    <%= link_to(school_show_path(school)) do%>
        <ul class="school">

          <li class='background'>
            <%= image_tag(img(school.img), class: 'background')%>
          </li>

          <li class="content">
            <%= image_tag(img(school.logo), id: 'logo') || school.title %>
            <p>Location: <%= school.location %></p>
            <p>Status: <%= school.status %></p>
          </li>
        </ul>
    <% end %>
  <% end %>
</div>