<%= form_for(@school) do |f| %>
  <% if @school.errors.any? %>
    <% @school.errors.full_messages.each do |error| %>
      <%= alert_generator(error) %>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :status %>
    <%= f.text_field :status %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :link %>
  </div>

  <div class="field">
    <label class="btn btn-primary">
      Upload School Image <%= f.file_field :img, style: 'display:none;' %>
    </label>
  </div>

  <div class="field">
    <label class="btn btn-primary">
      Upload School Logo <%= f.file_field :logo, style: 'display:none;' %>
    </label>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.date_field :start_date %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.date_field :end_date %>
  </div>

  <%= f.submit %>
<% end %>