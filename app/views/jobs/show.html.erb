<div class="show">
  <section 
  class='headline' 
  style="background-image: url('<%= img(@job.img) %>')"
  >
    <%= image_tag(img(@job.logo), class: 'grid-logo')%>

    <%= admin_links('job_path(@job)', 'admin-links') %>
  </section>

  <section class='description'>
    <%= image_tag(@job.description_img, class: 'paired-image') %>

    <div class='copy'>
      <%= markdown(@job.description) %>
    </div>
  </section>

  <div class="divider"></div>

  <section class='details'>
    <h1>Job Details</h1>
    <div>
      <%= icon('fas', 'map-marker-alt')%>
      <h3>Location</h3>
      <%= @job.location %>
    </div>

    <div>
      <%= icon('fas', 'check')%>
      <h3>Job Title</h3>
      <%= @job.title %>
    </div>

    <div>
      <%= icon('fas', 'calendar-day')%>
      <h3>Time Employed</h3>
      <p><%= @job.start_date.strftime("%b, %Y") %> -
      <% if @job.end_date? %>
          <%= @job.end_date.strftime("%b, %Y") %>
        <% else %>
         Current</p>
      <% end %>
    </div>
  </section>

  <div class="divider"></div>

  <section class="experience">
    <div class='copy'>
      <%= markdown(@job.experience) %>
    </div>

    <%= image_tag(@job.experience_img, class: 'paired-image') %>
  </section>

  <p><%= @job.link %></p>
</div>