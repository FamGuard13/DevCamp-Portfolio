<div class="show">
  <section 
  class='headline' 
  style="background-image: url('<%= img(@job.img) %>')"
  >
    <%= image_tag(img(@job.logo), class: 'grid-logo')%>

    <%= admin_links('job_path(@job)', 'admin-links') %>
  </section>

  <section class='description'>
    <div class='paired-image'></div>

    <div class='copy'>
      <%= markdown(@job.description) %>
    </div>
  </section>

  <div class="divider"></div>

  <section class='details'>
    <h1>Job Details</h1>
    <div>
      <h3>Location</h3>
      <%= @job.location %>
    </div>

    <div>
      <h3>Job Title</h3>
      <%= @job.title %>
    </div>

    <div>
      <h3>Time Employed</h3>
      <p><b>Start-Date:</b> <%= @job.end_date.strftime("%b, %Y") %></p>
      <p><b>End-Date:</b> <%= @job.end_date.strftime("%b, %Y") %></p>
    </div>
  </section>

  <div class="divider"></div>

  <section class="experience">
    <div class='copy'>
      <%= markdown(@job.description) %>
    </div>

      <div class='paired-image'></div>
  </section>

  <p><%= @job.link %></p>
</div>