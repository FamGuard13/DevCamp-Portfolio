<h1 class='title' >Work History</h1>

<div class="grid-sort">
  <% @jobs.each do |job| %>
    <%= link_to(job_show_path(job)) do%>
        <ul class="job">
          <li>
            <%= image_tag(job.logo, class: 'logo') %>
          </li>

          <li>
            <%= image_tag(img(job.img), class: 'background')%>
          </li>
        </ul>
    <% end %>
  <% end %>
</div>